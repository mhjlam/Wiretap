<UserControl
    x:Class="Wiretap.Views.ListenersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Wiretap.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Listeners Header with Play/Stop Button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <controls:PlayStopButton x:Name="PlayStopButton"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"
                                     Click="PlayStopButton_Click"/>
            <TextBlock Text="Listeners"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Listeners ListView -->
        <ListView x:Name="ListenersListView"
                  Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.ActiveListeners, Mode=OneWay}"
                  SelectionMode="None"
                  CanDragItems="True"
                  CanReorderItems="True"
                  AllowDrop="True"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="2"
                  CornerRadius="8"
                  Padding="0"
                  DragItemsStarting="ListenersListView_DragItemsStarting"
                  DragItemsCompleted="ListenersListView_DragItemsCompleted">
            <ListView.Transitions>
                <TransitionCollection />
            </ListView.Transitions>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical">
                        <ItemsStackPanel.ChildrenTransitions>
                            <TransitionCollection />
                        </ItemsStackPanel.ChildrenTransitions>
                    </ItemsStackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ListenerBorder"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Margin="4"
                            Padding="8"
                            HorizontalAlignment="Stretch"
                            PointerEntered="ListenerBorder_PointerEntered"
                            PointerExited="ListenerBorder_PointerExited">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Drag handle indicator -->
                            <Grid Grid.Column="0" 
                                  Width="16" 
                                  Height="20" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0">
                                <Ellipse Width="2" Height="2" 
                                        Fill="{ThemeResource TextFillColorTertiaryBrush}" 
                                        VerticalAlignment="Top" 
                                        HorizontalAlignment="Center"
                                        Margin="0,4,0,0" />
                                <Ellipse Width="2" Height="2" 
                                        Fill="{ThemeResource TextFillColorTertiaryBrush}" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" />
                                <Ellipse Width="2" Height="2" 
                                        Fill="{ThemeResource TextFillColorTertiaryBrush}" 
                                        VerticalAlignment="Bottom" 
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,4" />
                            </Grid>
                            
                            <!-- Individual Play/Stop Button -->
                            <controls:PlayStopButton Grid.Column="1"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"
                                                     Tag="{Binding}"
                                                     IsPlaying="{Binding IsListening}"
                                                     Click="ToggleListenerButton_Click"/>
                            
                            <!-- Listener Content -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,2" />
                                
                                <TextBlock Text="{Binding Protocol}" 
                                           FontSize="12"
                                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                           Margin="0,0,0,2" />
                                
                                <TextBlock Text="{Binding DisplayInfo}" 
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            
                            <!-- Close Button -->
                            <controls:CloseButton Grid.Column="3"
                                                  Tag="{Binding}"
                                                  Click="RemoveListenerButton_Click"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter x:Name="ContentPresenter"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Content="{TemplateBinding Content}"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <!-- Button Row -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0"
                    Spacing="8">
            
            <controls:SettingsButton x:Name="SettingsButton"
                                   Click="SettingsButton_Click"/>
            
            <controls:PlusButton x:Name="AddButton"
                                 Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>