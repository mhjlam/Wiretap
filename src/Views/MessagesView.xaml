<UserControl
    x:Class="Wiretap.Views.MessagesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Wiretap.Controls"
    xmlns:converters="using:Wiretap.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Messages Header with Status Indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Ellipse x:Name="StatusIndicator"
                     Width="18"
                     Height="18"
                     Fill="Red"
                     VerticalAlignment="Center"
                     Stroke="{ThemeResource CardStrokeColorDefaultBrush}"
                     StrokeThickness="1"
                     Margin="0,0,8,0"/>
            <TextBlock Text="Messages"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Messages ListView -->
        <ListView x:Name="MessagesListView"
                  Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.IncomingMessages, Mode=OneWay}"
                  SelectedItem="{x:Bind ViewModel.SelectedMessage, Mode=TwoWay}"
                  SelectionMode="Single"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                  BorderThickness="2"
                  CornerRadius="8"
                  Padding="0"
                  Tapped="MessagesListView_Tapped"
                  RightTapped="MessagesListView_RightTapped"
                  KeyDown="MessagesListView_KeyDown"
                  SelectionChanged="MessagesListView_SelectionChanged"
                  Loaded="MessagesListView_Loaded">
            <ListView.Transitions>
                <TransitionCollection />
            </ListView.Transitions>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical">
                        <ItemsStackPanel.ChildrenTransitions>
                            <TransitionCollection />
                        </ItemsStackPanel.ChildrenTransitions>
                    </ItemsStackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="MessageBorder"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            CornerRadius="6"
                            Margin="4"
                            HorizontalAlignment="Stretch">
                        <Grid x:Name="MessageContent" 
                              Padding="8" 
                              Background="Transparent"
                              PointerEntered="MessageContent_PointerEntered"
                              PointerExited="MessageContent_PointerExited">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding TimestampFormatted}" 
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Source}" 
                                           FontWeight="SemiBold"
                                           FontSize="11"
                                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                           VerticalAlignment="Center" />
                                
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding SourceInfo}" 
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"
                                           Visibility="{Binding SourceInfo, Converter={StaticResource StringToVisibilityConverter}}" />
                            </Grid>
                            
                            <TextBlock Grid.Row="1" 
                                       Text="{Binding Message}" 
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Margin="0,2,0,0"
                                       TextWrapping="Wrap" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter x:Name="ContentPresenter"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Content="{TemplateBinding Content}"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Opacity="1">
                                    <ContentPresenter.Transitions>
                                        <TransitionCollection />
                                    </ContentPresenter.Transitions>
                                </ContentPresenter>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <!-- Button Row -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <controls:ScrollToTopButton x:Name="ScrollToTopButton"
                                        Grid.Column="0"
                                        Click="ScrollToTop_Click"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,8,0"/>
            
            <controls:ClearButton x:Name="ClearMessagesButton"
                                  Grid.Column="1"
                                  Click="ClearMessages_Click"
                                  HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</UserControl>